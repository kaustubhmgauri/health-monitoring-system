{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Pytest Tests with .env",
            "type": "python",
            "request": "launch",
            "program": "pytest",
            "console": "integratedTerminal",
            "args": [
                "-v",
                "patients/tests/",       // folder containing all your test files
                "--tb=short"
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Run Django Server with .env",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ],
            "django": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
